<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sonhnlab.pc.core.viewmodel.LoginViewModel"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.LoginActivity">

        <include layout="@layout/toolbar_login"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box3">

                <EditText
                    android:id="@+id/edt_login_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/edt_login_hint_username"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="22sp"
                    app:font="@{@string/open_sans_regular}"/>

                <EditText
                    android:id="@+id/edt_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_login_username"
                    android:background="@null"
                    android:hint="@string/edt_login_hint_password"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="22sp"
                    app:font="@{@string/open_sans_regular}"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:src="@drawable/btn_sign_in"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/or"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/im_login_btn_sign_in_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/btn_sign_in_facebook"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/btn_sign_in_linked"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/tv_login_forgot_password"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                app:font="@{@string/open_sans_regular}"/>

        </LinearLayout>

    </LinearLayout>

</layout>