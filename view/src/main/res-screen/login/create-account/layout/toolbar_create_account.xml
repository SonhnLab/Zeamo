<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.sonhnlab.pc.core.viewmodel.CreateAccountViewModel"/>

    </data>

    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar_create_account"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:theme="@style/ToolBarTheme">

        <TextView
            android:id="@+id/tv_toolbar_title_create_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/toolbar_create_account_title"
            android:textColor="#093478"
            android:textSize="24sp"
            app:font="@{@string/open_sans_regular}"/>

    </android.support.v7.widget.Toolbar>

</layout>