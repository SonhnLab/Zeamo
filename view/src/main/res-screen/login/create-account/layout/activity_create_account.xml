<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sonhnlab.pc.core.viewmodel.CreateAccountViewModel"/>

    </data>

    <LinearLayout
        android:id="@+id/layout_create_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.CreateAccountActivity">

        <include layout="@layout/toolbar_create_account"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_create_account">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/box2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_create_account_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/edt_create_account_hint_username"
                    android:inputType="text"
                    android:padding="@dimen/padding_create_account_box"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="22sp"
                    app:font="@{@string/open_sans_regular}"/>

                <EditText
                    android:id="@+id/edt_create_account_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/edt_create_account_hint_password"
                    android:inputType="textPassword"
                    android:padding="@dimen/padding_create_account_box"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="22sp"
                    app:font="@{@string/open_sans_regular}"/>

                <EditText
                    android:id="@+id/edt_create_account_reenter_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/edt_create_account_hint_reenter_password"
                    android:inputType="textPassword"
                    android:padding="@dimen/padding_create_account_box"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="22sp"
                    app:font="@{@string/open_sans_regular}"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_create_account_marginTop"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/checkbox_agree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:src="@drawable/checkbox_agree"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_create_account_agree"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    app:font="@{@string/open_sans_regular}"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_create_account_height"
                android:layout_marginTop="@dimen/btn_create_account_marginTop"
                android:clickable="true"
                android:src="@drawable/btn_continue"/>

        </LinearLayout>

    </LinearLayout>

</layout>